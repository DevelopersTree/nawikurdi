
<% const meta = (`${seo}`).split('\n'); %>
<% if(activePage=='home'){ %>
    <title><%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %></title>
    <meta name="title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>">

    <meta name="description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>">
    <meta name="keywords" content="<%= Buffer.from(`${meta[0]}`, 'base64').toString('utf8') %>">
    

    <!-- Open Graph / Facebook -->
    <meta property="article:author" content="https://www.facebook.com/nawykurdi" />
    <meta property="og:locale" content="en_EN"/>
    <meta property="og:site_name" content="nawikurdi" />
    <meta property="og:description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>"/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>" />
    <meta property="og:image" content="<%= PUBLIC_WEBSITE_LINK %>/images/cover-2.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://lucid-source.com/">
    <meta property="twitter:title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>">
    <meta property="twitter:description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>">
    <meta property="twitter:image" content="<%= PUBLIC_WEBSITE_LINK %>/images/cover-2.jpg">

<% } %>
<% if(!seoFromContent){ %>
    <title><%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %></title>
    <meta name="title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>">

    <meta name="description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>">
    <meta name="keywords" content="<%= Buffer.from(`${meta[0]}`, 'base64').toString('utf8') %>">
    

    <!-- Open Graph / Facebook -->
    <meta property="article:author" content="https://www.facebook.com/nawykurdi" />
    <meta property="og:locale" content="en_EN"/>
    <meta property="og:site_name" content="nawikurdi" />
    <meta property="og:description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>"/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>" />
    <meta property="og:image" content="<%= PUBLIC_WEBSITE_LINK %>/images/cover-2.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://lucid-source.com/">
    <meta property="twitter:title" content="<%= Buffer.from(`${meta[2]}`, 'base64').toString('utf8') %>">
    <meta property="twitter:description" content="<%= Buffer.from(`${meta[1]}`, 'base64').toString('utf8') %>">
    <meta property="twitter:image" content="<%= PUBLIC_WEBSITE_LINK %>/images/cover-2.jpg">

<% } else { %>
    <% if(contentType == 'work') { %>
        <title>Lucid Source | <%= work.name %></title>

        <meta name="title" content="Lucid Source | <%= work.name %>">
        <meta name="description" content="<%= decodeHTMLEntities(makePlainText(work.content).substr(0,160)) %>">
        <meta name="keywords" content="<%= Buffer.from(`${meta[0]}`, 'base64').toString('utf8') %>">
        
        <!-- Open Graph -->
        <meta property="article:author" content="https://www.facebook.com/LucidSource" />
        <meta property="og:locale" content="en_EN"/>
        <meta property="og:site_name" content="Lucid Source" />
        <meta property="og:description" content="<%= decodeHTMLEntities(makePlainText(work.content).substr(0,160)) %>"/>
        <meta property='og:type' content="article" />
        <meta property="og:title" content="Lucid Source | <%= work.name %>" />
        <meta property="og:image" content="<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= work.cover_id %>" />
        
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:title" content="Lucid Source | <%= work.name %>">
        <meta property="twitter:description" content="<%= decodeHTMLEntities(makePlainText(work.content).substr(0,160)) %>">
        <meta property="twitter:image" content="<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= work.cover_id %>">

        <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
        <script type="application/ld+json">
            {
                "@context" : "http://schema.org",
                "@type" : "SoftwareApplication",
                "name" : "Lucid Source | <%= work.name %>",
                "image" : "<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= work.cover_id %>",
                "author" : {
                    "@type" : "Person",
                    "name" : "Lucid Source"
                },
                "publisher" : {
                    "@type" : "Organization",
                    "name" : "Lucid Source"
                }
            }
        </script>
    <% } %>
    <% if(contentType == 'blog') { %>
        <title>Lucid Source | <%= blog.name %></title>
        <meta name="title" content="Lucid Source | <%= blog.name %>">
        <meta name="description" content="<%= decodeHTMLEntities(makePlainText(blog.content_en).substr(0,160)) %>">
        <meta name="keywords" content="<%= blog.tags %>"> 

        <!-- Open Graph -->
        <meta property="article:author" content="https://www.facebook.com/LucidSource" />
        <meta property="og:locale" content="en_EN"/>
        <meta property="og:site_name" content="Lucid Source" />
        <meta property='og:type' content="article" />
        <meta property="og:title" content="Lucid Source | <%= blog.name %>" />
        <meta property="og:image" content="<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= blog.cover_id %>" />
        <meta property="og:description" content="<%= decodeHTMLEntities(makePlainText(blog.content_en).substr(0,160)) %>"/>
        
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:title" content="Lucid Source | <%= blog.name %>">
        <meta property="twitter:description" content="<%= decodeHTMLEntities(makePlainText(blog.content).substr(0,160)) %>">
        <meta property="twitter:image" content="<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= blog.cover_id %>">


        <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
        <script type="application/ld+json">
            {
                "@context" : "http://schema.org",
                "@type" : "Article",
                "name" : "Lucid Source | <%= blog.name %>",
                "author" : {
                    "@type" : "Person",
                    "name" : "<%= blog.author_name %>"
                },
                "datePublished" : "<%= moment(blog.created_at).format('LLLL') %>",
                "image" : "<%= PUBLIC_WEBSITE_LINK %>/<%= uploads %>/<%= blog.cover_id %>",
                "articleBody" : "<%= decodeHTMLEntities(makePlainText(blog.content_en).substr(0,260)) %>",
                "url" : "<%= PUBLIC_WEBSITE_LINK %>/blog/<%= blog.id %>",
                "publisher" : {
                    "@type" : "Organization",
                    "name" : "Lucid Source"
                }
            }
        </script>
    <% } %>
<% } %>
